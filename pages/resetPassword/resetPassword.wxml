<view class="container">
  <view class="page-header">
    <text class="page-title">重置密码</text>
  </view>

  <view class="form-container">
    <the-input-group id="input-group" bind:input="onInput"></the-input-group>

    <view class="code-button-container">
      <the-button
        id="code-button"
        text="{{codeButtonText}}"
        disabled="{{codeButtonDisabled}}"
        bind:the_tap="onGetCode">
      </the-button>
    </view>

    <view class="button-container">
      <the-button
        id="submit-button"
        text="重置密码"
        bind:the_tap="onResetPassword">
      </the-button>
    </view>

    <view class="tips">
      <text>已有账号？</text>
      <navigator url="/pages/login/login" class="link">去登录</navigator>
    </view>
  </view>
</view>