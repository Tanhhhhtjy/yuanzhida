.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 40rpx 0;
}

.page-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
  padding: 0 40rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-container {
  flex: 1;
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
}

.code-button-container {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.button-container {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.tips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  gap: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #007AFF;
  text-decoration: none;
}